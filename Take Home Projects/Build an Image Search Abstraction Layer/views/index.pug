doctype html

html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE-edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Image Search Abstraction Layer

    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    // 'Maven Pro', sans-serif
    link(href="https://fonts.googleapis.com/css2?family=Maven+Pro&display=swap" rel="stylesheet")
    // 'Manrope', sans-serif
    link(href="https://fonts.googleapis.com/css2?family=Manrope:wght@300&display=swap" rel="stylesheet")

    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    link(rel="stylesheet" href="/public/css/index.css" type="text/css")

  body
    .container.content-wrapper
      .heading-wrapper
        h1.title Image Search Abstraction Layer  
          small.credits A project by 
            a(href="https://github.com/Ry2uko" target="_blank") Ry2uko

      .form-wrapper
        h2.form-title Search for Images

        .form
          .form-floating
            input(type="text" placeholder="Search Query")#querySearch.form-control.shadow-none
            label(for="querySearch") Query

          .form-floating
            input(type="text" min="1" max="100" placeholder="Page Count")#pageCount.form-control.shadow-none
            label(for="pageCount") Page (optional)

          .form-floating
            input(type="text" placeholder="Image Count")#imgCount.form-control.shadow-none
            label(for="imgCount") Image Count (optional)

          .form-floating
            select#imgSize.form-select
              option(value="all" selected) All
              option(value="small") Small
              option(value="regular") Regular
              option(value="full") Full
            label(for="imgSize") Image Size

          .group-submit
            p.error-msg Hoppity hop hop

            .searchOrRecent
              button(type="submit")#btnSearch.btn.btn-primary.shadow-none Search 
              p or <br/>
                a(href="/api/recent")#seeRecent See recent searches

    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" 
    integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" 
    crossorigin="anonymous" referrerpolicy="no-referrer")
    script(type="text/javascript" src="/public/js/index.js")